# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python
*.pyx text diff=python
*.pxd text diff=python
*.pxi text diff=python

# Documentation
*.md text diff=markdown
*.rst text
*.txt text
*.json text
*.yml text
*.yaml text

# Web files
*.html text diff=html
*.css text diff=css
*.js text diff=javascript
*.xml text

# Configs
*.ini text
*.cfg text
*.conf text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.zip binary
*.pdf binary
*.h5 binary
*.pkl binary
*.model binary
*.bin binary
*.pt binary
*.pth binary
*.onnx binary
*.joblib binary
*.npy binary
*.npz binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore 